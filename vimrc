syntax on
set number
set mouse=a
imap jj <Esc>
vmap jj <Esc>
set clipboard=unnamedplus
set belloff=all
set confirm
set shiftwidth=4
set softtabstop=4
set expandtab
set smarttab
set ai
set si
set wrap
set ruler 
set encoding=utf8
set backspace=eol,start,indent
set whichwrap+=<,>,h,l
set hlsearch
set incsearch
nnoremap A $
